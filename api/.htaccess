# Protezione directory API
# Consenti accesso ai file PHP
<Files ~ "\.php$">
    Require all granted
</Files>

# Nascondi file .htaccess
<Files ".htaccess">
    Require all denied
</Files>

# Imposta headers di sicurezza
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"

# Disabilita server signature
ServerSignature Off
